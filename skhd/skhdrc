# shift + ctrl - h : yabai -m space --focus prev
# shift + ctrl - l : yabai -m space --focus next

# focus window
shift + alt - h : yabai -m window --focus west
shift + alt - j : yabai -m window --focus south
shift + alt - k : yabai -m window --focus north
shift + alt - l : yabai -m window --focus east

# swap managed window
shift + cmd - h : yabai -m window --swap west
shift + cmd - j : yabai -m window --swap south
shift + cmd - k : yabai -m window --swap north
shift + cmd - l : yabai -m window --swap east
# Equilize
shift + cmd - e : yabai -m space --balance 
# Rotate the window tree clock-wise (options: 90, 180, 270 degree)
shift + cmd - n : yabai -m space --rotate 270
# Toggle border
shift + cmd - b : yabai -m window --toggle border 


# Change focus between external display's
alt - a: yabai -m display --focus west
alt - s: yabai -m display --focus east

# toggle window fullscreen zoom
alt - f : yabai -m window --toggle zoom-fullscreen

# move window and focus desktop
# Space 1 messagig
shift + alt - 1 : yabai -m window --space 1; yabai -m space --focus 1
# Space 2 is terminal or IDE
shift + alt - 2 : yabai -m window --space 2; yabai -m space --focus 2
# Space 3 is browser
shift + alt - 3 : yabai -m window --space 3; yabai -m space --focus 3; yabai -m window --swap west
shift + alt - 4 : yabai -m window --space 4; yabai -m space --focus 4
shift + alt - 5 : yabai -m window --space 5; yabai -m space --focus 5
shift + alt - 6 : yabai -m window --space 6; yabai -m space --focus 7
shift + alt - 7 : yabai -m window --space 7; yabai -m space --focus 7
shift + alt - 8 : yabai -m window --space 8; yabai -m space --focus 9
shift + alt - 9 : yabai -m window --space 9; yabai -m space --focus 9

# increase window size
 ctrl - left : yabai -m window --resize left:-25:0
 ctrl - down : yabai -m window --resize bottom:0:25
 ctrl - up : yabai -m window --resize top:0:-25
 ctrl - right : yabai -m window --resize right:25:0

# decrease window size
 ctrl + shift - right : yabai -m window --resize left:25:0
 ctrl + shift - up : yabai -m window --resize bottom:-0:25
 ctrl + shift - down : yabai -m window --resize top:0:25
 ctrl + shift - left : yabai -m window --resize right:-25:0


